{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2023"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "composite": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ],
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo/tsconfig.node.tsbuildinfo"
  },
  "include": [
    "vite.config.ts",
    "package.json",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.d.ts"
  ]
}