{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "url": [
        "https://recall254.vercel.app/iebc-office",
        "https://recall254.vercel.app/iebc-office/map",
        "https://recall254.vercel.app/nasaka-iebc"
      ],
      "settings": {
        "chromeFlags": "--no-sandbox --headless --disable-gpu",
        "onlyCategories": ["performance", "accessibility", "best-practices", "seo"],
        "throttling": {
          "rttMs": 150,
          "throughputKbps": 1638.4,
          "cpuSlowdownMultiplier": 4,
          "requestLatencyMs": 375,
          "downloadThroughputKbps": 1474.56,
          "uploadThroughputKbps": 675
        },
        "formFactor": "mobile",
        "screenEmulation": {
          "mobile": true,
          "width": 375,
          "height": 667,
          "deviceScaleFactor": 2,
          "disabled": false
        },
        "emulatedUserAgent": "Mozilla/5.0 (Linux; Android 11; SM-G991B) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.114 Mobile Safari/537.36 Chrome-Lighthouse"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.75 }],
        "categories:accessibility": ["error", { "minScore": 0.90 }],
        "categories:best-practices": ["error", { "minScore": 0.85 }],
        "categories:seo": ["error", { "minScore": 0.90 }],
        "largest-contentful-paint": ["error", { "maxNumericValue": 2500 }],
        "cumulative-layout-shift": ["error", { "maxNumericValue": 0.1 }],
        "first-contentful-paint": ["error", { "maxNumericValue": 1800 }],
        "total-blocking-time": ["error", { "maxNumericValue": 350 }],
        "interactive": ["error", { "maxNumericValue": 3800 }],
        "speed-index": ["error", { "maxNumericValue": 3400 }],
        "resource-summary:document-size": ["error", { "maxNumericValue": 500 }],
        "resource-summary:image-size": ["error", { "maxNumericValue": 1000 }],
        "resource-summary:script-size": ["error", { "maxNumericValue": 500 }],
        "resource-summary:stylesheet-size": ["error", { "maxNumericValue": 100 }],
        "resource-summary:third-party-size": ["error", { "maxNumericValue": 500 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage",
      "githubToken": "${{ secrets.GITHUB_TOKEN }}",
      "githubApiUrl": "https://api.github.com"
    }
  }
}